---
interface Props {
	name: string;
	image: string;
	players: number;
	minBet: number;
	href: string;
	featured?: boolean;
}

const { name, image, players, minBet, href, featured = false } = Astro.props;
---

<a href={href} class="game-card block bg-slate-800 rounded-xl overflow-hidden relative group">
	{
		featured && (
			<div class="absolute top-4 right-4 z-10">
				<span class="bg-gradient-to-r from-yellow-400 to-amber-500 text-slate-900 px-3 py-1 rounded-full text-sm font-bold">
					ğŸ”¥ HOT
				</span>
			</div>
		)
	}

	<div class="relative overflow-hidden h-48">
		<img
			src={image}
			alt={name}
			class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
		/>
		<div class="absolute inset-0 bg-gradient-to-t from-slate-900 to-transparent"></div>
	</div>

	<div class="p-6">
		<h3
			class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-amber-500 mb-2"
		>
			{name}
		</h3>

		<div class="flex items-center gap-4 text-sm text-slate-400 mb-4">
			<div class="flex items-center gap-1">
				<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
					<path
						d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"
					></path>
				</svg>
				<span>{players} playing</span>
			</div>
			<div class="flex items-center gap-1">
				<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"
					></path>
				</svg>
				<span>Min ${minBet}</span>
			</div>
		</div>

		<button
			class="w-full btn-gold py-3 rounded-lg font-bold text-lg hover:scale-105 transition-transform"
		>
			PLAY NOW
		</button>
	</div>
</a>
