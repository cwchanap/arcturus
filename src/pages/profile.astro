							<span
								class={`inline-flex items-center gap-2 rounded-full border px-4 py-1 text-xs font-semibold uppercase tracking-widest ${
									user.emailVerified
										? 'border-emerald-400/40 text-emerald-300'
										: 'border-yellow-500/40 text-yellow-300'
								}`}
