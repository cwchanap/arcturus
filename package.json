{
	"name": "arcturus",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"dev": "astro dev",
		"build": "astro build",
		"preview": "astro preview",
		"astro": "astro",
		"db:generate": "drizzle-kit generate",
		"db:push": "drizzle-kit push",
		"db:migrate:local": "wrangler d1 execute arcturus-db --local --file=./drizzle/0000_powerful_wrecking_crew.sql",
		"db:migrate:remote": "wrangler d1 execute arcturus-db --remote --file=./drizzle/0000_powerful_wrecking_crew.sql",
		"db:studio": "drizzle-kit studio",
		"deploy": "astro build && wrangler deploy",
		"prepare": "husky",
		"lint": "eslint . --max-warnings 0",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check ."
	},
	"lint-staged": {
		"*.{js,mjs,ts,tsx,astro}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,md,css}": [
			"prettier --write"
		]
	},
	"dependencies": {
		"@astrojs/mdx": "^4.3.6",
		"@libsql/client": "^0.15.15",
		"@tailwindcss/vite": "^4.1.13",
		"@types/canvas-confetti": "^1.9.0",
		"astro": "^5.14.1",
		"better-auth": "^1.3.23",
		"better-call": "^1.0.19",
		"canvas-confetti": "^1.9.3",
		"drizzle-orm": "^0.44.5",
		"tailwindcss": "^4.1.13"
	},
	"devDependencies": {
		"@astrojs/cloudflare": "^12.6.9",
		"@cloudflare/workers-types": "^4.20250927.0",
		"@eslint/js": "^9.36.0",
		"drizzle-kit": "^0.31.5",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-astro": "^1.3.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.3",
		"prettier": "^3.6.2",
		"prettier-plugin-astro": "^0.14.1",
		"typescript-eslint": "^8.45.0",
		"wrangler": "^4.40.2"
	}
}
