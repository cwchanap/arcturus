---
import AppLayout from './AppLayout.astro';

interface Props {
	title?: string;
	headerSticky?: boolean;
	bodyClass?: string;
	footerClass?: string;
}

const { title = 'Arcturus Casino', headerSticky, bodyClass, footerClass } = Astro.props as Props;
---

<AppLayout
	title={title}
	headerSticky={headerSticky}
	bodyClass={bodyClass}
	footerClass={footerClass}
>
	<slot />
</AppLayout>
