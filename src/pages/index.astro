---

<CasinoLayout title="Arcturus Casino - Premium Online Gaming">
	<!-- Hero Section -->
	<div class="relative overflow-hidden">
		<!-- Animated Background -->
		<div class="absolute inset-0">
			<div
				class="absolute inset-0 bg-gradient-to-b from-yellow-500/10 via-transparent to-transparent"
			>
			</div>
			<div class="absolute inset-0 opacity-5">
				<div
					class="absolute top-10 left-10 w-32 h-32 bg-yellow-400 rounded-full blur-3xl animate-pulse"
				>
				</div>
				<div
					class="absolute top-40 right-20 w-40 h-40 bg-amber-500 rounded-full blur-3xl animate-pulse"
					style="animation-delay: 1s"
				>
				</div>
				<div
					class="absolute bottom-20 left-1/3 w-36 h-36 bg-yellow-600 rounded-full blur-3xl animate-pulse"
					style="animation-delay: 2s"
				>
				</div>
			</div>
		</div>

		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 relative">
